" Basic " {{{

set autoindent
set expandtab
set foldmethod=marker
set hlsearch
set ignorecase
set modeline
set modelines=5
set mouse=
set nojs
set nowrap
set number
set shiftwidth=2
set showcmd
set tabstop=2

"}}}

" Key Mappings " {{{

nnoremap s o<ESC>
nnoremap S O<ESC>

"}}}

" Folds " {{{

"au BufWinLeave        *          mkview
"au BufWinEnter        *          silent loadview
"au BufWrite           *          mkview
"au BufRead            *          silent loadview
"au BufRead,BufNewFile *.txt      set foldmethod=indent

"}}}

" Special Filetypes " {{{

au BufRead,BufNewFile *.cltex    set filetype=cltex
au BufRead,BufNewFile *.gnarly   set filetype=gnarly
au BufRead,BufNewFile *.ljs      set filetype=ljs
au BufRead,BufNewFile *.lp       set filetype=lispwithparagraphs
au BufRead,BufNewFile *.ocamltex set filetype=ocamltex
au BufRead,BufNewFile *.scala    set filetype=scala

"}}}
