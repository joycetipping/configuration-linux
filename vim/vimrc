set number
set nowrap
set tabstop=2
set expandtab
set shiftwidth=2
set autoindent
set hlsearch
set ignorecase
set nojs

nnoremap s o<ESC>
nnoremap S O<ESC>

au BufRead,BufNewFile *.cltex    set filetype=cltex
au BufRead,BufNewFile *.gnarly   set filetype=gnarly
au BufRead,BufNewFile *.lp       set filetype=lispwithparagraphs
au BufRead,BufNewFile *.ocamltex set filetype=ocamltex
au BufRead,BufNewFile *.scala    set filetype=scala
