" Custom VIMRC file by Spencer Tipping

set nu sta et sc fdc=2 sw=2 tw=192 ai mouse=a nowrap nojs hls is foldlevel=10 enc=utf8 term=xterm title visualbell noerrorbells hidden pastetoggle=<F2> foldenable tags=tags;/

map <C-\> :tab split<CR>:exec("tag ".expand("<cword>"))<CR>

syntax on
let perl_extended_vars=1

hi Folded     ctermbg=15
hi FoldColumn ctermbg=15

" Custom syntax stuff
au BufRead,BufNewFile *.cltex  setf cltex
au BufRead,BufNewFile *.gnarly setf gnarly
au BufRead,BufNewFile *.scala  setf scala
au BufRead,BufNewFile *.hx     setf haxe
au BufRead,BufNewFile *.scss   setf scss
