# vim: syntax=sh :

# Helpful variables:
conf="$HOME/projects/configuration"

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$PATH:$HOME/bin"
fi

# Bash prompt:
. $conf/bash/prompt

# Exports
export EDITOR=/usr/bin/vim
export LC_CTYPE=en_US.utf-8
export TERM=xterm-color

# Hacks
export SSH_AUTH_SOCK=0 # This solves "Agent admitted failure to sign using the key." bug in ssh-copy-id.

# Aliases
alias bc='echo Starting bc -l;echo;bc -l'
alias cpl='cp -d'
alias remove='/bin/rm'
alias rm='echo Use remove'
alias sudojt='sudo -u joycetipping'
alias sus='sudo pm-suspend'

alias u='cd ../'
alias u2='cd ../../'
alias u3='cd ../../../'
alias u4='cd ../../../../'
alias u5='cd ../../../../../'
alias u6='cd ../../../../../../'
alias u7='cd ../../../../../../../'
alias u8='cd ../../../../../../../../'

alias aliases='vim $conf/bash/bash_aliases'
alias lily='ssh jdt@lily.local'
alias luajit='luajit-2.0.0-beta2'
alias musings='vim $HOME/projects/musings/2010.txt'
alias notes='cd $HOME/library/notes/'
alias vt='vim -t'

# R
export R_LIBS="$HOME/.R:$R_LIBS"
# Ruby
alias irbs='irb --simple-prompt'
# RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"  # This loads RVM into a shell session.
cd .  # To source the rvmrc
