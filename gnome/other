my $apps = gconf_setter ('/apps/');
&$apps (<<EOF
  bool    *    nautilus/preferences/show_desktop                  *    false     *
  string  *    gnome_settings_daemon/keybindings/volume_down      *    \<Ctrl\>\<Alt\>a  *
  string  *    gnome_settings_daemon/keybindings/volume_up        *    \<Ctrl\>\<Alt\>q  *
  string  *    gnome_settings_daemon/keybindings/volume_mute      *    \<Ctrl\>\<Alt\>z  *
EOF
);

my $desktop = gconf_setter ('/desktop/');
&$desktop (<<EOF
  bool    *    gnome/sound/event_sounds             *    false                             *
  float   *    gnome/font_rendering/dpi             *    72                                *
  string  *    gnome/applications/browser/exec      *    /opt/google/chrome/google-chrome  *
EOF
);
