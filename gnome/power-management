my $power_manager = gconf_setter ('/apps/gnome-power-manager/');
&$power_manager (<<EOF
  bool    *    lock/suspend                   *    false    *
  bool    *    lock/use_screensaver_settings  *    false    *
  int     *    timeout/sleep_computer_ac      *    3600     *    Time in seconds
  string  *    buttons/lid_ac                 *    blank    *
EOF
);

my $screensaver = gconf_setter ('/apps/gnome-screensaver/');
&$screensaver (<<EOF
  bool    *    lock_enabled                   *    false    *
EOF
);
