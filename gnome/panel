my $general = gconf_setter ('/apps/panel/general/');
&$general (<<EOF
  list:string  *  toplevel_id_list  *  [panel]  *
  list:string  *  applet_id_list    *  [workspace_switcher_screen0,notification_area_screen0,clock_screen0]  *
  list:string  *  object_id_list    *  []       *
EOF
);

my $panel = gconf_setter ('/apps/panel/toplevels/panel/');
&$panel (<<EOF
  bool      *    expand         *    false    *
  string    *    orientation    *    top      *
  bool      *    x_centered     *    true     *
EOF
);

my $applets = gconf_setter ('/apps/panel/applets/');
&$applets (<<EOF
  string    *    clock_screen0/toplevel_id                *    panel      *
  string    *    clock_screen0/prefs/format               *    24-hour    *
  string    *    clock_screen0/prefs/cities               *    \<location name="" city="Boulder" timezone="America/Denver" latitude="40.039444" longitude="-105.225830" code="KBJC" current="true"/\>  *
  string    *    notification_area_screen0/toplevel_id    *    panel      *
  string    *    workspace_switcher_screen0/toplevel_id   *    panel      *
EOF
);
